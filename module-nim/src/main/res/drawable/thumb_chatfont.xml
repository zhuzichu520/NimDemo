<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="32dp"
                android:height="32dp" />
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#00000000"
                android:gradientRadius="32dp"
                android:startColor="#21000000"
                android:type="radial" />
        </shape>
    </item>
    <item
        android:bottom="1.7dp"
        android:left="1.7dp"
        android:right="1.7dp"
        android:top="1.7dp">
        <shape android:shape="oval">
            <size
                android:width="32dp"
                android:height="32dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>