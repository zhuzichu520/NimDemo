<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/qmui_skin_support_s_list_item_bg_1"
        android:gravity="center"
        android:textSize="18sp"
        app:qmui_skin_background="?attr/qmui_skin_support_s_list_item_bg_1"
        app:qmui_skin_text_color="?attr/app_skin_color_font_primary" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:qmui_skin_background="?attr/app_skin_color_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>